name: CI

on:
  push:
    branches: [ "main" ]
  pull_request:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      # Checkout the repository
      - uses: actions/checkout@v4

      # Set up JDK 11
      - name: Set up JDK 11
        uses: actions/setup-java@v2
        with:
          java-version: 11
          distribution: 'adoptopenjdk'

      # Cache Gradle dependencies
      - name: Cache Gradle dependencies
        uses: actions/cache@v3
        with:
          path: ~/.gradle/caches
          key: ${{ runner.os }}-gradle-${{ hashFiles('**/*.gradle*') }}
          restore-keys: |
            ${{ runner.os }}-gradle-

      # Verify Gradle version
      - name: Verify Gradle version
        run: ./gradlew --version

      # Refresh Gradle dependencies (ensure up-to-date dependencies)
      - name: Refresh Gradle dependencies
        run: ./gradlew --refresh-dependencies

      # Build the APK (debug build)
      - name: Build Debug APK
        run: ./gradlew assembleDebug

      # List APK output directory to confirm APK is built
      - name: List APK output directory
        run: ls -R app/build/outputs/apk

      # Upload the APK as an artifact
      - name: Upload APK as artifact
        uses: actions/upload-artifact@v3
        with:
          name: debug-apk
          path: app/build/outputs/apk/debug/app-debug.apk
